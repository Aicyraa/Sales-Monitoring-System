<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" spacing="20.0" style="-fx-background-radius: 12;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Product Image -->
      <ImageView fx:id="productImage" id="productImage" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/product_placeHolder.jpg" />
         </image>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </HBox.margin>
      </ImageView>

      <!-- Name & Category -->
      <VBox alignment="CENTER" prefHeight="80.0" prefWidth="173.0" spacing="5.0" style="-fx-background-color: #1E293B; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="nameLabel" id="nameLabel" text="Product Name" textFill="#f1f5f9">
               <font>
                  <Font name="JetBrains Mono Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="categoryLabel" id="categoryLabel" text="Category | Supplier" textFill="#94a3b8">
               <font>
                  <Font name="JetBrains Mono Regular" size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <HBox prefHeight="100.0" prefWidth="650.0" style="-fx-background-color: #1E293B; -fx-background-radius: 8;">
         <children>
      
             <!-- Price -->
            <VBox alignment="CENTER" prefWidth="150.0" spacing="5.0" HBox.hgrow="SOMETIMES">
               <children>
                  <Label text="Price" textFill="#94a3b8">
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="priceLabel" id="priceLabel" text="\$0.00" textFill="#cfd38c">
                     <font>
                        <Font name="JetBrains Mono Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
      
            <!-- Performance / Sales -->
            <VBox alignment="CENTER" prefWidth="150.0" spacing="5.0" HBox.hgrow="SOMETIMES">
               <children>
                  <Label text="Sold" textFill="#94a3b8">
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="soldLabel" id="soldLabel" text="0 items" textFill="#5094bc">
                     <font>
                        <Font name="JetBrains Mono Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
      
            <!-- Stock Info -->
            <VBox alignment="CENTER_LEFT" prefWidth="150.0" spacing="5.0" HBox.hgrow="SOMETIMES">
               <children>
                   <Label alignment="CENTER" prefHeight="17.0" prefWidth="143.0" text="Stock" textFill="#94a3b8">
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="5"> 
                      <Label fx:id="stockLabel" id="stockLabel" text="100" textFill="#f1f5f9">
                         <font>
                            <Font name="JetBrains Mono Bold" size="14.0" />
                         </font>
                      </Label>
                      <Label fx:id="statusLabel" id="statusLabel" text="Healthy" textFill="#22c55e">
                         <font>
                            <Font name="JetBrains Mono Regular" size="11.0" />
                         </font>
                      </Label>
                  </HBox>
               </children>
            </VBox>
            
                  <!-- Actions / Profit (Business Method Integration) -->
             <VBox alignment="CENTER" prefWidth="150.0" spacing="5.0" HBox.hgrow="SOMETIMES">
               <children>
                  <Label text="Profit Margin" textFill="#94a3b8">
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="profitLabel" id="profitLabel" text="30%" textFill="#6dda74">
                     <font>
                        <Font name="JetBrains Mono Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>

   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</HBox>
