               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Category" textFill="#94a3b8">
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="categoryField" promptText="Enter category" style="-fx-background-color: #1E293B; -fx-text-fill: white; -fx-background-radius: 4;" />
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Supplier" textFill="#94a3b8">
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="supplierField" promptText="Enter supplier" style="-fx-background-color: #1E293B; -fx-text-fill: white; -fx-background-radius: 4;" />
               </children>
            </VBox>

            <HBox spacing="10.0">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Price ($)" textFill="#94a3b8">
                           <font>
                              <Font name="JetBrains Mono Regular" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="priceField" promptText="0.00" style="-fx-background-color: #1E293B; -fx-text-fill: white; -fx-background-radius: 4;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Cost ($)" textFill="#94a3b8">
                           <font>
                              <Font name="JetBrains Mono Regular" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="costField" promptText="0.00" style="-fx-background-color: #1E293B; -fx-text-fill: white; -fx-background-radius: 4;" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Stock" textFill="#94a3b8">
                           <font>
                              <Font name="JetBrains Mono Regular" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="stockField" promptText="0" style="-fx-background-color: #1E293B; -fx-text-fill: white; -fx-background-radius: 4;" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Re-Order Level" textFill="#94a3b8">
                           <font>
                              <Font name="JetBrains Mono Regular" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="reOrderField" promptText="0" style="-fx-background-color: #1E293B; -fx-text-fill: white; -fx-background-radius: 4;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-cursor: hand;" text="Cancel">
               <font>
                  <Font name="JetBrains Mono Regular" size="14.0" />
               </font>
            </Button>
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 4;" text="Save Product">
               <font>
                  <Font name="JetBrains Mono Bold" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
